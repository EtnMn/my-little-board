@using Etn.MyLittleBoard.Application.Projects.Edit
<MudDialog DefaultFocus="DefaultFocus.FirstChild">
    <DialogContent>
        <MudForm Model="@projectRequest" @ref="@form" Validation="@(validator.Validation)">
            <MudTextField @bind-Value="this.projectRequest.Name" Required="true" Immediate="true" For="@(() => this.projectRequest.Name)" Label="Name" Variant="Variant.Text" MaxLength="25" Counter="25" />
            <MudTextField @bind-Value="this.projectRequest.Description" Immediate="true" For="@(() => this.projectRequest.Description)" Label="Description" Variant="Variant.Text" MaxLength="300" Counter="300" AutoGrow />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton @onclick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="@(async () => await Submit())">Create project</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private readonly FluentValueValidator<EditProjectValidator, EditProjectRequest> validator = new(new());
    private MudForm form = default!;
    private readonly EditProjectRequest projectRequest = new EditProjectRequest(0);

    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = default!;

    private async Task Submit()
    {
        await form.Validate();
        if (form.IsValid)
        {
            MudDialog.Close(DialogResult.Ok(projectRequest));
        }
    }

    private void Cancel() => MudDialog.Cancel();

}
